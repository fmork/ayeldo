{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "declaration": true,
    "disableSourceOfProjectReferenceRedirect": true,
    "paths": {
      "@ayeldo/utils": ["../utils/dist"],
      "@ayeldo/core": ["../core/dist"],
      "@ayeldo/types": ["../types/dist"],
      "@ayeldo/infra-aws": ["../infra-aws/dist"]
    }
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts"],
  "references": [
    { "path": "../types" },
    { "path": "../core" },
    { "path": "../utils" },
    { "path": "../infra-aws" }
  ]
}
