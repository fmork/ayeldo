{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2022",
    "baseUrl": "./",
    "strictPropertyInitialization": false
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "allowSyntheticDefaultImports": true
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}
